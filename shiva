<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Class Schedule</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
        }
        th {
            background-color: #f2f2f2;
            text-align: left;
        }
    </style>
</head>
<body>
    <h1>Weekly Class Schedule</h1>
    <label for="vnumber">Enter V Number:</label>
    <input type="text" id="vnumber" placeholder="e.g., V01108262">
    <button onclick="displaySchedule()">Get Schedule</button>

    <h2>Schedule</h2>
    <table id="scheduleTable">
        <thead>
            <tr>
                <th>Course Name</th>
                <th>Meeting Days</th>
                <th>Time</th>
                <th>Room Number</th>
            </tr>
        </thead>
        <tbody>
            <!-- Schedule rows will be populated here -->
        </tbody>
    </table>

    <script>
        // Sample data representing multiple students and their respective courses
        const students = [
            {
                vNumber: 'V01108262',
                courses: [
                    { courseName: 'INFO 544', meetingDays: 'Monday, Wednesday', time: '10:00 AM - 11:30 AM', roomNumber: 'Room 101' },
                    { courseName: 'INFO 560', meetingDays: 'Tuesday, Thursday', time: '2:00 PM - 3:30 PM', roomNumber: 'Room 202' }
                ]
            },
            {
                vNumber: 'V01108300',
                courses: [
                    { courseName: 'INFO 610', meetingDays: 'Monday, Wednesday', time: '1:00 PM - 2:30 PM', roomNumber: 'Room 105' },
                    { courseName: 'INFO 620', meetingDays: 'Friday', time: '12:00 PM - 2:00 PM', roomNumber: 'Room 305' }
                ]
            },
            {
                vNumber: 'V01108456',
                courses: [
                    { courseName: 'INFO 540', meetingDays: 'Tuesday, Thursday', time: '10:00 AM - 11:30 AM', roomNumber: 'Room 205' },
                    { courseName: 'INFO 550', meetingDays: 'Monday', time: '3:00 PM - 5:00 PM', roomNumber: 'Room 302' }
                ]
            }
        ];

        // Function to display the schedule based on V number
        function displaySchedule() {
            const vNumber = document.getElementById('vnumber').value.trim();
            const scheduleTableBody = document.querySelector('#scheduleTable tbody');

            // Clear the previous schedule
            scheduleTableBody.innerHTML = '';

            // Find the student with the matching V number
            const student = students.find(student => student.vNumber === vNumber);

            if (!student) {
                alert('No courses found for the entered V number.');
                return;
            }

            // Populate the table with course data
            student.courses.forEach(course => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${course.courseName}</td>
                    <td>${course.meetingDays}</td>
                    <td>${course.time}</td>
                    <td>${course.roomNumber}</td>
                `;
                scheduleTableBody.appendChild(row);
            });
        }
    </script>
</body>
</html>
